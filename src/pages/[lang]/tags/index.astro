---
import { getCollection } from "astro:content";
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Tag from "@/components/Tag.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import getUniqueTags from "@/utils/getUniqueTags";
import { SITE } from "@/config";
import { SUPPORTED_LOCALES, type Locale } from "@/i18n/locales";
import { t } from "@/i18n";

export async function getStaticPaths() {
  return SUPPORTED_LOCALES.map(lang => ({
    params: { lang },
  }));
}

const { lang } = Astro.params as { lang: Locale };

const allPosts = await getCollection("blog");
const posts = allPosts.filter(post => post.data.lang === lang);

let tags = getUniqueTags(posts);
---

<Layout title={`${t(lang, "tags.title")} | ${SITE.title}`}>
  <Header />
  <Main pageTitle={t(lang, "tags.title")} pageDesc={t(lang, "tags.description")}>
    <ul>
      {tags.map(({ tag, tagName }) => <Tag {tag} {tagName} size="lg" />)}
    </ul>
  </Main>
  <Footer />
</Layout>
