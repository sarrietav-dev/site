---
import { SOCIALS } from "@/constants";
import LinkButton from "./LinkButton.astro";
import { DEFAULT_LOCALE, type Locale } from "@/i18n/locales";
import { t } from "@/i18n";
import { SITE } from "@/config";

export interface Props {
  centered?: boolean;
  lang?: Locale;
}

const { centered = false, lang = DEFAULT_LOCALE } = Astro.props;
---

<div class:list={["flex-wrap justify-center gap-1", { flex: centered }]}>
  {
    SOCIALS.map(social => {
      // Map social name to translation key
      const translationKeyMap: Record<string, string> = {
        GitHub: "footer.onGitHub",
        X: "footer.onX",
        LinkedIn: "footer.onLinkedIn",
        Mail: "footer.sendEmail",
      };

      const key = translationKeyMap[social.name] || "";
      const linkTitle = key ? t(lang, key).replace("{name}", SITE.title) : social.linkTitle;

      return (
        <LinkButton
          href={social.href}
          class="p-2 hover:rotate-6 sm:p-1"
          title={linkTitle}
        >
          <social.icon class="inline-block size-6 scale-125 fill-transparent stroke-current stroke-2 opacity-90 group-hover:fill-transparent sm:scale-110" />
          <span class="sr-only">{linkTitle}</span>
        </LinkButton>
      );
    })
  }
</div>
