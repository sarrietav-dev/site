---
import Hr from "./Hr.astro";
import IconX from "@/assets/icons/IconX.svg";
import IconMoon from "@/assets/icons/IconMoon.svg";
import IconSearch from "@/assets/icons/IconSearch.svg";
import IconArchive from "@/assets/icons/IconArchive.svg";
import IconSunHigh from "@/assets/icons/IconSunHigh.svg";
import IconMenuDeep from "@/assets/icons/IconMenuDeep.svg";
import LinkButton from "./LinkButton.astro";
import { SITE } from "@/config";
import IconBrain from "@/assets/icons/IconBrain.svg";
import { DEFAULT_LOCALE, type Locale } from "@/i18n/locales";
import { t } from "@/i18n";

const { pathname } = Astro.url;

// Extract language from URL (e.g., /en/posts -> en)
const pathParts = pathname.split("/").filter(p => p.trim());
const lang = (pathParts[0] || DEFAULT_LOCALE) as Locale;

// Remove trailing slash from current pathname if exists
const currentPath =
  pathname.endsWith("/") && pathname !== "/" ? pathname.slice(0, -1) : pathname;

const isActive = (path: string) => {
  const currentPathArray = currentPath.split("/").filter(p => p.trim());
  const pathArray = path.split("/").filter(p => p.trim());

  return currentPath === path || currentPathArray[1] === pathArray[1];
};
---

<header>
  <a
    id="skip-to-content"
    href="#main-content"
    class="absolute start-16 -top-full z-50 bg-background px-3 py-2 text-accent backdrop-blur-lg transition-all focus:top-4"
  >
    Skip to content
  </a>
  <div
    id="nav-container"
    class="mx-auto flex max-w-app flex-col items-center justify-between sm:flex-row"
  >
    <div
      id="top-nav-wrap"
      class="relative flex w-full items-baseline justify-between bg-transparent p-4 sm:items-center sm:py-6"
    >
      <a
        href={`/${lang}/`}
        class="absolute py-1 text-xl leading-8 font-semibold whitespace-nowrap sm:static sm:my-auto sm:text-2xl sm:leading-none"
      >
        {SITE.title}
      </a>
      <nav
        id="nav-menu"
        class="flex w-full flex-col items-center sm:ms-2 sm:flex-row sm:justify-end sm:space-x-4 sm:py-0"
      >
        <button
          id="menu-btn"
          class="focus-outline self-end p-2 sm:hidden"
          aria-label="Open Menu"
          aria-expanded="false"
          aria-controls="menu-items"
        >
          <IconX id="close-icon" class="hidden" />
          <IconMenuDeep id="menu-icon" />
        </button>
        <ul
          id="menu-items"
          class:list={[
            "mt-4 grid w-44 grid-cols-2 place-content-center gap-2",
            "[&>li>a]:block [&>li>a]:px-4 [&>li>a]:py-3 [&>li>a]:text-center [&>li>a]:font-medium [&>li>a]:hover:text-accent sm:[&>li>a]:px-2 sm:[&>li>a]:py-1",
            "hidden",
            "sm:mt-0 sm:flex sm:w-auto sm:gap-x-5 sm:gap-y-0",
          ]}
        >
          <li class="col-span-2">
            <a href={`/${lang}/posts`} class:list={{ "active-nav": isActive(`/${lang}/posts`) }}>
              {t(lang, "nav.posts")}
            </a>
          </li>
          <li class="col-span-2">
            <a href={`/${lang}/tags`} class:list={{ "active-nav": isActive(`/${lang}/tags`) }}>
              {t(lang, "nav.tags")}
            </a>
          </li>
          <li class="col-span-2">
            <a href={`/${lang}/about`} class:list={{ "active-nav": isActive(`/${lang}/about`) }}>
              {t(lang, "nav.about")}
            </a>
          </li>
          <li class="col-span-2">
            <LinkButton
              href="https://brain.sarrietav.dev"
              class:list={["focus-outline flex justify-center p-3 sm:p-1", { "active-nav [&>svg]:stroke-accent": isActive("/kb") }]}
              ariaLabel="knowledge base"
              title="Knowledge Base"
            >
              <IconBrain class="hidden sm:inline-block" />
              <span class="sm:sr-only">Digital Garden</span>
            </LinkButton>
          </li>
          {
            SITE.showArchives && (
              <li class="col-span-2">
                <LinkButton
                  href={`/${lang}/archives`}
                  class:list={[
                    "focus-outline flex justify-center p-3 sm:p-1",
                    {
                      "active-nav [&>svg]:stroke-accent": isActive(`/${lang}/archives`),
                    },
                  ]}
                  ariaLabel="archives"
                  title={t(lang, "nav.archives")}
                >
                  <IconArchive class="hidden sm:inline-block" />
                  <span class="sm:sr-only">{t(lang, "nav.archives")}</span>
                </LinkButton>
              </li>
            )
          }
          <li class="col-span-1 flex items-center justify-center">
            <LinkButton
              href={`/${lang}/search`}
              class:list={[
                "focus-outline flex p-3 sm:p-1",
                { "[&>svg]:stroke-accent": isActive(`/${lang}/search`) },
              ]}
              ariaLabel="search"
              title={t(lang, "nav.search")}
            >
              <IconSearch />
              <span class="sr-only">{t(lang, "nav.search")}</span>
            </LinkButton>
          </li>
          <li class="col-span-1 flex items-center justify-center">
            <div class="relative">
              <select
                id="lang-selector"
                class="focus-outline cursor-pointer bg-transparent p-3 sm:p-1 text-sm font-medium hover:text-accent border border-transparent rounded"
                aria-label="Select Language"
                title="Select Language"
              >
                <option value="en" selected={lang === "en"}>EN</option>
                <option value="es" selected={lang === "es"}>ES</option>
              </select>
            </div>
          </li>
          {
            SITE.lightAndDarkMode && (
              <li class="col-span-1 flex items-center justify-center">
                <button
                  id="theme-btn"
                  class="focus-outline relative size-12 p-4 sm:size-8 hover:[&>svg]:stroke-accent"
                  title="Toggles light & dark"
                  aria-label="auto"
                  aria-live="polite"
                >
                  <IconMoon class="absolute top-[50%] left-[50%] -translate-[50%] scale-100 rotate-0 transition-all dark:scale-0 dark:-rotate-90" />
                  <IconSunHigh class="absolute top-[50%] left-[50%] -translate-[50%] scale-0 rotate-90 transition-all dark:scale-100 dark:rotate-0" />
                </button>
              </li>
            )
          }
        </ul>
      </nav>
    </div>
  </div>
  <Hr />
</header>

<script>
  function toggleNav() {
    const menuBtn = document.querySelector("#menu-btn");
    const menuItems = document.querySelector("#menu-items");
    const menuIcon = document.querySelector("#menu-icon");
    const closeIcon = document.querySelector("#close-icon");

    if (!menuBtn || !menuItems || !menuIcon || !closeIcon) return;

    menuBtn.addEventListener("click", () => {
      const openMenu = menuBtn.getAttribute("aria-expanded") === "true";

      menuBtn.setAttribute("aria-expanded", openMenu ? "false" : "true");
      menuBtn.setAttribute("aria-label", openMenu ? "Open Menu" : "Close Menu");

      menuItems.classList.toggle("hidden");
      menuIcon.classList.toggle("hidden");
      closeIcon.classList.toggle("hidden");
    });
  }

  function setupLanguageSelector() {
    const langSelector = document.querySelector("#lang-selector") as HTMLSelectElement;
    if (!langSelector) return;

    langSelector.addEventListener("change", (e) => {
      const newLang = (e.target as HTMLSelectElement).value;
      const pathParts = window.location.pathname.split("/").filter(p => p.trim());
      const currentLang = pathParts[0];

      // Check if we're on a post page
      const isPostPage = pathParts.some(part => part === "posts") ||
                         window.location.pathname.match(/\/posts\/[^/]+\/[^/]+/);

      if (isPostPage) {
        // For post pages, redirect to posts index in the new language
        // This is because post slugs are different between languages
        window.location.pathname = `/${newLang}/posts`;
        return;
      }

      // For non-post pages, swap the language segment
      if (currentLang === "en" || currentLang === "es") {
        pathParts[0] = newLang;
        window.location.pathname = "/" + pathParts.join("/");
      } else {
        // If no language in path, add it
        window.location.pathname = `/${newLang}${window.location.pathname}`;
      }
    });
  }

  toggleNav();
  setupLanguageSelector();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", () => {
    toggleNav();
    setupLanguageSelector();
  });
</script>
